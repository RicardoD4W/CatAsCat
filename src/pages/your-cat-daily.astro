---
import MainLayout from '@/layouts/MainLayout.astro'
import { SITE_URL } from '@/consts'
---

<script is:inline type='module'>
  try {
    const res = await fetch('/api/daily-cat')
    if (!res.ok) {
      throw new Error('Error al obtener la imagen del gato')
    }
    const data = await res.json()
    const imageUrl = data.url || ''
    const quote = data.quote || ''
    const counter = data.id || 0

    const catImg = document.getElementById('catImage')
    const generatedCounter = (document.getElementById(
      'generated-counter'
    ).textContent = `Gatitos generados: ${data.id}`)
    catImg.src = imageUrl

    document.getElementById('quote').textContent = quote

    const twitterButton = document.getElementById('twitter')
    const whatsappButton = document.getElementById('whatsapp')

    const tweetText = `Check out the cat of the day!\n\n#cat #cats #dailycat @CatAsCat\n`
    const tweetUrl = `https://x.com/intent/post?text=${encodeURIComponent(tweetText)}&url=${encodeURIComponent(catImg.dataset.uri + '/your-cat-daily')}`
    const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(tweetText + catImg.dataset.uri + '/your-cat-daily')}`

    twitterButton.href = tweetUrl
    whatsappButton.href = whatsappUrl
  } catch (error) {
    console.error('Error al cargar la imagen del gato:', error)
  }
</script>

<MainLayout customTitle='Tu gato diario'>
  <article>
    <picture>
      <h4 id='generated-counter'>Gatitos generados: ...</h4>
      <img
        data-uri={SITE_URL}
        transition:animate='slide'
        id='catImage'
        alt='Gato del día'
      />
      <q
        id='quote'
        transition:animate='slide'
        >Cargando...</q
      >
      <section class='socials'>
        <a
          id='twitter'
          class='shareButton'
          href='#'
          target='_blank'
          rel='noopener noreferrer'
        >
          ¡Compártela en <svg
            xmlns='http://www.w3.org/2000/svg'
            width='1em'
            height='1em'
            viewBox='0 0 24 24'
            ><path
              fill='currentColor'
              d='m.058 1l9.267 12.39L0 23.462h2.099l8.163-8.82l6.596 8.82H24l-9.788-13.087L22.892 1h-2.1l-7.517 8.122L7.2 1zm3.087 1.546h3.28l14.488 19.37h-3.28L3.145 2.547Z'
            >
              <title>X icon</title>
            </path></svg
          >!</a
        >

        <a
          id='whatsapp'
          class='shareButton'
          href='#'
          target='_blank'
          rel='noopener noreferrer'
        >
          ¡Compártela en <svg
            xmlns='http://www.w3.org/2000/svg'
            width='1em'
