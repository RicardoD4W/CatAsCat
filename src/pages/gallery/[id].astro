---
import ArrowLeft from '@/components/icons/ArrowLeft.astro'
import ArrowRight from '@/components/icons/ArrowRight.astro'
import {
  getAllDailiesCats,
  getOneDailyCatById,
  getLastCatId,
} from '@/data/getCatData'
import MainLayout from '@/layouts/MainLayout.astro'
import type { IGallery } from '@/types/gallery'

export async function getStaticPaths() {
  const catsArray = (await getAllDailiesCats()) as IGallery[]
  const paths = catsArray.map(dailyCat => ({
    params: { id: dailyCat.id },
  }))

  return paths
}

const { id } = Astro.params

const lastCatId = (await getLastCatId()) as number
const dailyCat = (await getOneDailyCatById(id)) as unknown as IGallery

const daysOfWeek = [
  'Domingo',
  'Lunes',
  'Martes',
  'Miércoles',
  'Jueves',
  'Viernes',
  'Sábado',
]
const monthsOfYear = [
  'Enero',
  'Febrero',
  'Marzo',
  'Abril',
  'Mayo',
  'Junio',
  'Julio',
  'Agosto',
  'Septiembre',
  'Octubre',
  'Noviembre',
  'Diciembre',
]

const formattedDate = new Date(dailyCat.date)
const dayName = daysOfWeek[formattedDate.getDay()]
const day = formattedDate.getDate()
const monthName = monthsOfYear[formattedDate.getMonth()]
const year = formattedDate.getFullYear()

const displayDate = `${dayName}, ${day} de ${monthName} de ${year}`
---

<MainLayout customTitle='Detalles de la Imagen'>
  <article class='detail-container'>
    {
      dailyCat.id !== 1 && (
        <a
          href={`/gallery/${dailyCat.id - 1}`}
          class='nav-arrow left-arrow'
        >
          <ArrowLeft />
        </a>
      )
    }

    <section class='image-section'>
      <h4 class='image-date'>{displayDate}</h4>

      <figcaption class='image-quote'>
        <img
          src={dailyCat.url}
          alt={`Imagen del día ${displayDate}`}
          class='responsive-image'
          width='600'
          height='400'
        />
        <section class='quote-section'>
          <p class='quote'>
            " {dailyCat.quote} "
          </p>
        </section>
      </figcaption>
    </section>
    {
      dailyCat.id !== lastCatId && (
        <a
          href={`/gallery/${dailyCat.id + 1}`}
          class='nav-arrow right-arrow'
        >
          <ArrowRight />
        </a>
      )
    }
  </article>
</MainLayout>

<style>
  .detail-container {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .image-section {
    position: relative;
  }

  .image-quote {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 20px;
  }

  .image-date {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 1rem;
    font-weight: normal;
    font-family: var(--font-body);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 5px 10px;
    border-radius: 5px;
    text-align: center;
  }

  .nav-arrow {
    z-index: 1;
    margin: 20px;
    color: #333;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 50%;
    transition: background-color 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;

    position: absolute;
  }

  .right-arrow {
    right: 0;
  }

  .left-arrow {
    left: 0;
  }

  .nav-arrow:hover {
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
  }

  .responsive-image {
    width: 100%;
    max-width: 450px;
    height: auto;
    max-height: 600px;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  }

  .quote-section {
    font-family: var(--font-heading);
    font-size: x-large;
    text-align: center;
    overflow-wrap: break-word;
    width: 700px;
  }

  @media (max-width: 780px) {
    .responsive-image {
      width: 500px;
      height: auto;
    }
    .quote-section {
      width: 500px;
      font-size: x-large;
    }

    .nav-arrow {
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      top: 0;
    }
    .nav-arrow:hover {
      color: rgba(0, 0, 0, 0.5);
      background-color: white;
    }
  }

  @media (max-width: 525px) {
    .responsive-image {
      width: 250px;
      height: auto;
    }
    .quote-section {
      font-size: x-large;
      width: 300px;
    }
    .image-date {
      top: -45px;
      font-size: 15px;
    }
  }
</style>
